<div class='ui text container'>
  <% if flash[:notice] %>
    <div class="ui floating message">
      <p><%= flash[:notice] %></p>
    </div>
  <% end %>

  <h1 class='ui header'>
    作者信息
    <div class='sub header'>
      更新作者信息
    </div>
  </h1>

  <%= form_for @author, html: {class: 'ui form'} do |f| %>
    <div class="field">
      <label>作者笔名</label>
      <%= f.text_field :pen_name, placeholder: '让读者知道你是谁' %>
    </div>

    <div class="field">
      <label>作者简介</label>
      <%= f.text_area :intro, rows: '5', placeholder: '让读者更多的了解你' %>
    </div>

    <div class="field">
      <label>附言（可选）</label>
      <%= f.text_field :slogan, placeholder: '格言 / 警句 / 信仰 / 吐槽 / 什么都可以' %>
    </div>

    <button class="ui basic button" type="submit">保存</button>
  <% end %>
</div>

