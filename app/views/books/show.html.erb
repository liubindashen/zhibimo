<div class='ui text container'>
  <div class="ui divided items">
    <div class="item">
      <img class='ui bordered image' src="<%= @book.cover.preview.url %>">
      <div class="bottom aligned content">
        <div class="header"><%= @book.title %></div>
        <div class="meta">
          <span class="slug"><%= @book.slug %></span>
        </div>
        <div class="extra">
          <%= @book.intro %>
        </div>
      </div>
    </div>
  </div>

  <div class="ui horizontal divider">
    基本信息
  </div>
  <%= form_for @book, html: {class: 'ui form'} do |f| %>
    <div class="field">
      <label>图书标识</label>
      <span class='sub text'><%= @book.slug %></span>
    </div>
    <div class="field">
      <label>仓库地址</label>
      <span class='sub text'><%= @book.git_origin %></span>
    </div>
  <% end %>
  <div class="ui horizontal divider">
    更新图书
  </div>

  <%= form_for @book, html: {class: 'ui form'} do |f| %>
    <div class="field">
      <label>图书标题</label>
      <%= f.text_field :title, placeholder: '图书的主标题。' %>
    </div>
    <div class="field">
      <label>图书简介</label>
      <%= f.text_area :intro, rows: '5', placeholder: '图书的主标题。' %>
    </div>

    <button class="ui basic button" type="submit">保存</button>
    <a class="ui basic button" href='<%= books_path %>'>返回</a>
  <% end %>
</div>
