/*******************************
         Site Overrides
*******************************/
#slogan {
  padding: 0em;
  margin-top: 4.375em;
  margin-bottom: 2.5em;
  padding-top: 2em;
  background-repeat: no-repeat;
  background-position: top center;
}

#slogan p {
  margin-top: 0em;
  color: @primaryColor;
  font-weight: normal;
}

#book-background {
  width: 53em !important;
  padding-top: 0em;
  padding-bottom: 0em;
  margin-bottom: 2.188em;
  min-height: 35.032em;
  background-repeat: no-repeat;
  background-position: center;

  & > #book-content {
    min-height: 34.5em;

    h1.ui.header {
      margin-top: 5rem;
      margin-bottom: 3.125rem;
    }

    .ui.button {
      bottom: 4.375em;
    }
  }
}

#footer {
  width: 57em !important;
}

#footer_divider.ui.divider {
  opacity: 0.85;
  margin-top: 3.75em;
  font-size: 0.875rem;
  line-height: 1rem;
  font-weight: normal;
  color: @primaryColor;
  text-transform: none;
}

#wechat_login_wrapper, #signin_tip, #error_tip {
  margin-top: 8.875em;
}

#page_number {
  padding-top: 30em;
  padding-left: 8.25em;
  padding-right: 8.25em;
  font-size: 0.875rem;
  line-height: 1rem;
  font-weight: normal;
  color: @primaryColor;
  text-transform: none;
}

#logo {
  background-repeat: no-repeat;
  background-position: center center;

  &:hover {
    background-color: inherit;
  }
}

#explore_books .column {
  padding-top: 1.25em;
  padding-bottom: 1.25em;
}

.board.row {
  background: url('/images/board-left.png'),
              url('/images/board-right.png');
  background-origin: padding-box, padding-box;
  background-repeat: no-repeat, no-repeat;
  background-position: bottom left, bottom right;
  background-size: 3.75em 3.75em, 3.75em 3.75em;

  padding-bottom: 0em !important;

  &:after {
    content: '';
    background: url('/images/board-background.png');
    background-repeat: repeat-x;
    margin-top: -1.75em;
    height: 3.75em;
    min-height: 3.75em;
    width: 100%;
    background-size: 3.75em 100%;
  }

  .ui.header {
    padding-bottom: 2em;
  }
}

.padding.row {
  padding-left: 3.75em !important;
  padding-right: 3.75em !important;
}

.ui.form textarea {
  resize: none !important;
}
