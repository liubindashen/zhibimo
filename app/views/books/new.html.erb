<div class='ui text container'>
  <h1 class='ui header'>
    开始新的篇章 
    <div class='sub header'>
      填写图书信息
    </div>
  </h1>

  <%= form_for @book, html: {class: 'ui form'} do |f| %>
    <div class="field">
      <label>图书标题</label>
      <%= f.text_field :title, placeholder: '图书的主标题。' %>
    </div>

    <div class="field">
      <label>图书标识</label>
      <%= f.text_field :slug, placeholder: '图书的英文标识，不能修改，默认使用图书标题全拼。' %>
      <span class='sub text'><%= "http://git.zhibimo.com/#{@book.author.username}/xxx.git" %></span>
    </div>

    <button class="ui basic button" type="submit">创建图书</button>
  <% end %>

</div>
