<% title '新建图书'  %>

<% content_for :navigation do %>
  <div class='item'>
    <div class="ui huge breadcrumb">
      <%= link_to '我的图书', writer_books_path, class: 'active section' %>
    </div>
  </div>
<% end %>

<div class='ui container'>
  <div class="ui edge attached message">
    <div class="header">
      开始新的篇章
    </div>
    请填写基本的图书信息并选择收费策略。
  </div>

  <div class='ui edge attached segment'>

    <%= form_for @book, url: writer_books_path, html: {class: 'ui form'} do |f| %>
      <div class="field">
        <label>图书标题</label>
        <%= f.text_field :title, placeholder: '好图书要有个好名字。' %>
      </div>

      <div class="field">
        <label>图书标识</label>
        <%= f.text_field :slug, placeholder: '英文标识，不能修改，默认使用图书标题的全拼。' %>
        <span class='sub text'><%= "http://git.zhibimo.com/#{@book.author.username}/xxx.git" %></span>
      </div>

      <div class="fields">
        <div class="field">
          <div id='free_radio' class="ui radio checkbox">
            <%= f.radio_button :profit, 'free' %>
            <label>免费图书</label>
          </div>
        </div>
        <div class="field">
          <div id='purchase_radio' class="ui radio checkbox">
            <%= f.radio_button :profit, 'purchase' %>
            <label>付费图书</label>
          </div>
        </div>

      </div>

      <div id='free_field' class="field">
        <div class="ui checkbox">
          <%= f.check_box :donate, {checked: 'checked'}, 'true', 'false' %>
          <label>接受打赏</label>
        </div>
      </div>

      <div id='purchase_field' class="field">
        <label>图书价格</label>
        <div class="ui left icon input">
          <i class="yen icon"></i>
          <%= f.text_field :price, placeholder: '给图书定个合适的价格。' %>
        </div>
        <span class='sub text'><b><i class='warning icon'></i>付费图书将不得转为免费</b>，更多关于付费阅读的说明请参考 <a target='_blank' href='#'>知笔墨用户指南</a>。</span>
      </div>

      <div class="field">
        <div id='accept_term_checkbox' class="ui checkbox">
          <input type="checkbox">
          <label>同意</label>
        </div>
        <a target='_blank' href='/read/hpyhacking/zhibimo-guide/user-term.html'>知笔墨用户条款</a>
      </div>

      <div class="ui large buttons">
        <button class="ui disabled primary button" type='submit'>保存</button>
        <div class="or"></div>
        <%= link_to '取消', writer_books_path, class: 'ui button' %>
      </div>
    <% end %>
  </div>
</div>
