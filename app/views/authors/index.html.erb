<% title '发现作者' %>

<div id='navigation' class="ui inverted lightgray borderless attached menu">
  <div class='ui container'>
    <div class='item'>
      <div class="ui huge breadcrumb">
        <div class="section">发现</div>
        <i class="right chevron icon divider"></i>
        <div class="active section">作者</div>
      </div>
    </div>
    <div class='right item'>
      <%= link_to '发现图书', explore_books_path %>
    </div>
  </div>
</div>

<div class='ui container'>
  <div class="ui vertical segment">
    <div id='explore_list' class="ui divided items">
      <%- @authors.each do |author| %>
        <div class="item">
          <%= link_to(author_path(author), class: 'ui centered bordered image', target: '_blank') do %>
            <img src='<%= author.avatar.url %>'>
          <% end %>

          <div class="content">
            <h1 class="header"><a href='<%= author_path(author) %>' target='_blank'><%= author.pen_name %></a></h1>
            <div class="description">
              <p><%= author.intro %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

