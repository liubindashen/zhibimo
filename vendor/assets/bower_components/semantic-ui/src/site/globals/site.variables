/*******************************
     User Global Variables
*******************************/

@headerFont        : 'Helvetica Neue', Arial, Helvetica, 'Hiragino Sans GB', sans-serif;
@pageFont          : 'Helvetica Neue', Arial, Helvetica, 'Hiragino Sans GB', sans-serif;
@fontSmoothing     : antialiased;
@importGoogleFonts : false;

@emSize      : 16px;
@fontSize    : 16px;

@grey                : #B3B3B3;
@black               : #252C33;

@primaryColor        : #50616D;
@textColor           : @black;
@mutedTextColor      : @grey;

@linkColor           : @primaryColor;
@linkUnderline       : none;
@linkHoverColor      : darken(saturate(@linkColor, 20), 15, relative);
@linkHoverUnderline  : @linkUnderline;

@headerFontWeight : normal;
@headerLineHeight : 2.125em;

@h1 : 1.5rem;
@h2 : 1.25rem;
@h3 : 1rem;
@h4 : 1rem;
@h5 : 1rem;

@mobileBreakpoint            : 320px;
@tabletBreakpoint            : 768px;
@computerBreakpoint          : 992px;
@largeMonitorBreakpoint      : 1200px;
@widescreenMonitorBreakpoint : 1920px;
