<% title '成为作者'  %>

<% content_for :navigation do %>
  <div class='item'>
    <div class="ui huge breadcrumb">
      <div class="active section">开始写作</div>
    </div>
  </div>
<% end %>

<div class='ui text container'>
  <div class="ui edge attached message">
    <div class="header">
      成为作者
    </div>
    填写基本的作者信息并开始写作。
  </div>

  <div class='ui edge attached segment'>
    <%= form_for @author, url: writer_profile_path, html: {class: 'ui form'} do |f| %>
      <div class="field">
        <label>作者笔名</label>
        <%= f.text_field :pen_name, placeholder: '让读者知道你是谁' %>
      </div>

      <div class="field">
        <label>作者简介</label>
        <%= f.text_area :intro, rows: '5', placeholder: '让读者更多的了解你' %>
      </div>

      <div class="field">
        <label>附言（可选）</label>
        <%= f.text_field :slogan, placeholder: '格言 / 警句 / 信仰 / 吐槽 / 什么都可以' %>
      </div>

      <div class="ui large buttons">
        <button class="ui primary button" type='submit'>开始</button>
        <div class="or"></div>
        <%= link_to '取消', writer_books_path, class: 'ui button' %>
      </div>
    <% end %>
  </div>
</div>
