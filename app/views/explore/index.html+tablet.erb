<% content_for :explore_content do %>
  <div class='container'>
    <div class='explore-container'>
      <%- @books.in_groups_of(3) do |group| %>
      <div class='board'>
        <div class='board-content pure-g'>
          <%- group.each do |book| %>
          <%- next unless book %>
          <div class='book pure-u-1-3'>
            <%= render 'book', book: book %>
          </div>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
<% end %>
