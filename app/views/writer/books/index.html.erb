<div class='ui text container'>
  <div class="ui huge breadcrumb">
    <span class="section">写作</span>
    <i class="right chevron icon divider"></i>
    <span class="section">我的图书</span>
    <span class='ui split'></span>
    <a class='ui align right' href='<%= new_writer_book_path %>'>
      <i class='ui add icon'></i>
    </a>
  </div>

  <div class="ui divided items">
    <%- @books.each do |book| %>
      <div class="item">
        <div class="content">
          <a class="header" href='<%= edit_writer_book_path(book) %>'> <%= book.title %> </a>
          <div class='meta'>
            <span><%= book.slug %></span>
          </div>
          <div class="extra">
            <p><%= book.intro %></p>
            <a target='_blank' href='<%= writer_book_orders_path(book) %>'>订单</a>
            <a target='_blank' href='<%= writer_book_builds_path(book) %>'>构建</a>
            <a target='_blank' href='<%= writer_book_desk_path(book) %>/'>编辑 (测试)</a>
            <a target='_blank' href='<%= html_path(book) %>'>预览</a>
          </div>
        </div>
        <img class='ui bordered image' src="<%= book.cover.preview.url %>">
      </div>
    <% end %>
  </div>
</div>
