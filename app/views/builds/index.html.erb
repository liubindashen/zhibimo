<div class='ui text container'>
  <div class="ui large feed">
    <%- @book.builds.each do |build| %>
      <div class="event">
        <div class="label">
          <img src="<%= avatar(@book.author.user) %>">
        </div>
        <div class="content">
          <div class="summary">
            <a class="user">
              <%= @book.author.pen_name %>
            </a> 
            进行了构建
            <div class="date">
              <%= time_ago_in_words(build.at) %>
            </div>
          </div>
          <div class="extra text">
            <%= build.message %>
          </div>
          <div class="meta">
            <code><%= build.short_commit %></code>
            <a>
              查看此版本
            </a> 
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
