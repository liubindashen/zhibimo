<div class='ui container'>
  <div id='explore_books' class="ui centered grid">
    <%- @books.each do |book| %>
      <div class="center aligned five wide computer eight wide tablet ten wide mobile column">
        <a target='_blank' href='<%= explore_book_path(book.slug) %>'>
          <img class='ui centered bordered image' src='<%= book.cover.explore.url%>' height='256px'>
        </a>
      </div>
    <% end %>
  </div>
</div>
